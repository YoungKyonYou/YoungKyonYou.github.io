  <span class="kd">var</span> <span class="nx">searchForm</span> <span class="o">=</span> <span class="nx">$</span><span class="p">(</span><span class="dl">"</span><span class="s2">#searchForm</span><span class="dl">"</span><span class="p">);</span>

