<span class="kd">public</span> <span class="kd">class</span> <span class="nc">GreetingWebClient</span> <span class="o">{</span>
    <span class="kd">private</span> <span class="nc">WebClient</span> <span class="n">client</span> <span class="o">=</span> <span class="nc">WebClient</span><span class="o">.</span><span class="na">create</span><span class="o">(</span><span class="s">"http://localhost:8080"</span><span class="o">);</span>
    <span class="kd">private</span> <span class="nc">Mono</span><span class="o">&lt;</span><span class="nc">ClientResponse</span><span class="o">&gt;</span> <span class="n">result</span> <span class="o">=</span> <span class="n">client</span><span class="o">.</span><span class="na">get</span><span class="o">()</span>
            <span class="o">.</span><span class="na">uri</span><span class="o">(</span><span class="s">"/hello"</span><span class="o">)</span>
            <span class="o">.</span><span class="na">accept</span><span class="o">(</span><span class="nc">MediaType</span><span class="o">.</span><span class="na">TEXT_PLAIN</span><span class="o">)</span>
            <span class="o">.</span><span class="na">exchange</span><span class="o">();</span>
    <span class="kd">public</span> <span class="nc">String</span> <span class="nf">getResult</span><span class="o">()</span> <span class="o">{</span>
        <span class="k">return</span> <span class="s">"&gt;&gt; result = "</span> <span class="o">+</span> <span class="n">result</span><span class="o">.</span><span class="na">flatMap</span><span class="o">(</span><span class="n">res</span> <span class="o">-&gt;</span> <span class="n">res</span><span class="o">.</span><span class="na">bodyToMono</span><span class="o">(</span><span class="nc">String</span><span class="o">.</span><span class="na">class</span><span class="o">)).</span><span class="na">block</span><span class="o">();</span>
    <span class="o">}</span>
<span class="o">}</span>

